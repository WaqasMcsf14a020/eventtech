                <span style="font-weight:800">City: </span>@item.Status <br />
                <span style="font-weight:800">Organizer Name: </span>@item.Description <br />
                @Html.ActionLink("Edit--:", "Edit", new { /* id=item.PrimaryKey */ }) <br />
                @Html.ActionLink("Details-:", "Details", new { /* id=item.PrimaryKey */ }) <br />
