@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="background-color:indianred
    " class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h2>List of Events</h2><br />
