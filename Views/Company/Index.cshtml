@model IEnumerable<eventTech.Models.Company>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="background-color:indianred
    " class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h2>List of Companies</h2><br />
        @if (Model.Count() == 0)
        {
            <h3>No any Company Exists</h3>
        }
        else
        {
            foreach (var item in Model)
            {
                <span style="font-weight:800">Company Name:</span> @item.Name <br />
                <span style="font-weight:800">Email:</span> @item.Email <br />
                <span style="font-weight:800">Phone: </span> @item.Phone <br />
                //<span style="font-weight:800">Confirm Password: </span> @item.ConfirmPassword <br />
                <span style="font-weight:800">Company License No.: </span> @item.License <br />
                <span style="font-weight:800">City: </span>@item.City <br />
                <span style="font-weight:800">Organizer Name: </span>@item.Organizer.FirstName <br />
                @Html.ActionLink("Edit", "Edit", new { id=item.CompanyId }) <br />
                @Html.ActionLink("Delete", "Delete", new { id=item.CompanyId })<br />
                <hr style="height:2px; background-color:black" />
            }
        }
    </div>
    <div class="col-xs-3"></div>
</div>


