@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .textBoxError {
        padding: 2px;
        border: 1px solid #FF3300;
        background-color: #FFE3DD;
    }
</style>
<script type="text/javascript">

    $(function () {
        $(".form-control").blur(function () {
            if ($(this).val() == 0) {
                $(this).addClass("textBoxError");
            }
            else {
                $(this).removeClass("textBoxError");
            }
        });

        $("#loginForm").submit(function () {
            var result = true;
            if ($("#t1").val() == 0) {
                $("#t1").addClass("textBoxError");
                result = false;
            }
            if ($("#t2").val() == 0) {
                $("#t2").addClass("textBoxError");
                result = false;
            }
            return result;
        });
    });
</script>
<div class="row" style="background-color:indianred">
    

<div class="container" style="margin-top:40px">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong> Sign in to continue</strong>
                </div>
                <div class="panel-body">
                    <form id="loginForm" action="/Client/Login" method="post">
                        <div class="row">
                            <div class="center-block">
                                <img class="profile-img" src="~/Images/user.png" height="120" width="120" style="vertical-align:central" alt="" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-user"></i>
                                        </span>
                                        <input class="form-control" id="t1" placeholder="Username" name="loginname" type="text" autofocus>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-lock"></i>
                                        </span>
                                        <input class="form-control" id="t2" placeholder="Password" name="password" type="password" value="">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div id="dialog" style="color:red;">@ViewData["error"]</div>
                                    <input id="mybutton" type="submit" class="btn btn-lg btn-primary btn-block" value="Sign in">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="panel-footer ">
                    Don't have an account! @Html.ActionLink("Sign Up Here", "Create", "Client")
                </div>
            </div>
        </div>
    </div>
   
</div>
        </div>
   