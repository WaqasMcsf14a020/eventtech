@model IEnumerable<eventTech.Models.Package>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="background-color:indianred
    " class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h2>List of Packages</h2><br />
        @if (Model.Count() == 0)
        {
            <h3>No any Package Exists</h3>
        }
        else
        {
            foreach (var item in Model)
            {
                <span style="font-weight:800">Company Name :</span> @item.Title <br />
                <span style="font-weight:800">Email:</span> @item.Description <br />
                <span style="font-weight:800">Phone: </span> @item.Company.Name <br />
                @Html.ActionLink("Edit |", "Edit", new { id=item.PackageId }) 
                @Html.ActionLink("Details |", "Details", new { id=item.PackageId }) 
                @Html.ActionLink("Delete |", "Delete", new { id=item.PackageId })
                <hr style="height:2px; background-color:black" />
            }
        }
    </div>
    <div class="col-xs-3"></div>
</div>
