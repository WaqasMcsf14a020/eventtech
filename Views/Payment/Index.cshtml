@model IEnumerable<eventTech.Models.Payment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="background-color:indianred
    " class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h2>List of Clients About Payment</h2><br />
        @if (Model.Count() == 0)
        {
            <h3>No One Exists</h3>
        }
        else
        {
            foreach (var item in Model)
            {
                <span style="font-weight:800">Company Name :</span> @item.ClientId <br />
                <span style="font-weight:800">Amount:</span> @item.Amount <br />
                @Html.ActionLink("Edit |", "Edit", new { id=item.PaymentId }) 
                @Html.ActionLink("Details |", "Details", new { id=item.PaymentId }) 
                @Html.ActionLink("Delete ", "Delete", new { id=item.PaymentId })
                <hr style="height:2px; background-color:black" />
            }
        }
    </div>
    <div class="col-xs-3"></div>
</div>

