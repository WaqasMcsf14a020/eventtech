@model IEnumerable<eventTech.Models.Organizer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="background-color:indianred
    " class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h2>List of Organizers</h2><br />
        @if (Model.Count() == 0)
        {
            <h3>No any Organizer Exists</h3>
        }
        else
        {
            foreach (var item in Model)
            {
                <span style="font-weight:800">Company Name:</span> @item.FirstName <br />
                <span style="font-weight:800">Email:</span> @item.LastName <br />
                <span style="font-weight:800">Phone: </span> @item.Email <br />
                <span style="font-weight:800">Password: </span> @item.Password <br />
                <span style="font-weight:800">Company License No.: </span> @item.Phone <br />
                <span style="font-weight:800">City: </span>@item.CompanyName<br />
               @Html.ActionLink("Edit |", "Edit", new { id=item.OrganizerId }) 
               @Html.ActionLink("Details |", "Details", new { id=item.OrganizerId }) 
               @Html.ActionLink("Delete |", "Delete", new { id=item.OrganizerId })
                <hr style="height:2px; background-color:black" />
            }
        }
    </div>
    <div class="col-xs-3"></div>
</div>


