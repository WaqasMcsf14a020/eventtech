<style>
    .dashboardDiv {
        width: 200px;
        height: 150px;
        background: #28d;
        transition: all 0.3s ease;
        border-radius: 3%;
        padding: 40px;
        margin: 18px;
        margin-left: 100px;
        color: white;
    }

        .dashboardDiv:hover {
            border-radius: 50%;
        }
</style>

<div>
    @{
        if (Session["Designation"] != null && Session["Designation"] == "admin")
        {
             <a href="/Menu/Index">
                 <div class="dashboardDiv">
                     <h3>Admin's Dashboard</h3>
                 </div>
             </a>
        }
        else if (Session["Designation"] != null && Session["Designation"] == "user")
        {
            <a href="/Menu/Index">
                 <div class="dashboardDiv">
                     <h3>Client's Dashboard</h3>
                 </div>
             </a>
        }
        else if (Session["Designation"] != null && Session["Designation"] == "organizer")
        {
            <a href="/Organizer/Index">
                 <div class="dashboardDiv">
                     <h3>Organizer's Dashboard</h3>
                 </div>
             </a>
        }
        
    }
    
</div>